<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modify User"
        android:textColor="@color/black"
        android:id="@+id/txtLogin"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FirstName"
        android:textColor="@color/black"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtFirstnameLayout"
        android:layout_above="@+id/txtLastnameLayout"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LastName"
        android:textColor="@color/black"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLastnameLayout"
        android:layout_above="@+id/txtEmailLayout"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtEmailLayout"
        android:layout_centerInParent="true"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@color/black"
        android:layout_marginTop="425dp"
        android:layout_marginLeft="30dp"
        />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtAddresLayout"
        android:layout_width="match_parent"
        android:layout_margin="20sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmailLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtAddres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnModify"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:text="Modify"
        android:layout_above="@id/btnCancel"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:text="Cancel"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>