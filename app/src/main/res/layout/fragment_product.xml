<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProductName"
        android:textColor="@color/black"
        android:id="@+id/nameProduct"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        />
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/nameProduct"
        android:src="@drawable/ic_android_black_24dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/categoryProduct"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"/>

    <TextView
        android:layout_marginLeft="20sp"
        android:id="@+id/charact1Product"
        android:textSize="30sp"
        android:layout_below="@+id/categoryProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charact1"/>
    <TextView
        android:layout_marginLeft="20sp"
        android:id="@+id/charact2Product"
        android:textSize="30sp"
        android:layout_below="@+id/charact1Product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charact2"/>
    <TextView
        android:layout_marginLeft="20sp"
        android:id="@+id/charact3Product"
        android:textSize="30sp"
        android:layout_below="@+id/charact2Product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Charact3"/>


    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/priceProduct"
        android:textSize="60dp"
        android:textAlignment="textEnd"
        android:layout_marginRight="20sp"
        android:layout_below="@+id/charact3Product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"/>

    <LinearLayout
        android:layout_below="@+id/priceProduct"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:backgroundTint="@color/black"
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add to cart" />
    </LinearLayout>
</RelativeLayout>